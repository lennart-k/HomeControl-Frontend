{
    "compilerOptions": {
        "target": "es6",
        "strict": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "sourceMap": true,
        "module": "es2020",
        "moduleResolution": "node",
        "lib": [
            "es2016",
            "dom",
            "ESNext.AsyncIterable",
            "ES2017.Object"
        ],
        "baseUrl": ".",
        "paths": {
            "/*": [
                "src/*"
            ]
        }
    },
    "include": [
        "src/**/*.vue",
        "src/**/*.ts",
        "src/**/*.js",
        "src/**/*.svg",
        "types/vue.d.ts",
        "types/custom.d.ts"
    ],
    "exclude": [
        "node_modules"
    ],
}